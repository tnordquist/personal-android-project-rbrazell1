<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".controller.DrinkFragment">



  <Button
    android:id="@+id/button_add_drink"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/static_spacing"
    android:layout_margin="@dimen/double_static_spacing"
    android:text="@string/add_drink"
    app:layout_constraintTop_toBottomOf="@id/drink_recycler_view"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/button_add_bar"
    />

  <Button
    android:id="@+id/button_add_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/static_spacing"
    android:layout_margin="@dimen/double_static_spacing"
    android:text="@string/add_bar"
    app:layout_constraintTop_toBottomOf="@id/drink_recycler_view"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/button_add_drink"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/drink_recycler_view"
    android:layout_height="0dp"
    android:layout_width="0dp"
    android:padding="@dimen/static_spacing"
    android:layout_marginTop="@dimen/double_static_spacing"
    android:layout_marginBottom="@dimen/static_spacing"
    android:layout_marginStart="@dimen/static_spacing"
    android:layout_marginEnd="@dimen/static_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/button_add_drink"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="vertical"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    />


</androidx.constraintlayout.widget.ConstraintLayout>